{
  "extends": "../config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "ESNext",
    "baseUrl": ".",
    "types": ["node", "express", "vitest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@f1/be/*": ["src/*"],
      "@f1/prismaInstance": ["src/lib/prisma.ts"],
      "@f1/types/*": ["../libs/types/*"],
      "@f1/constants": ["./src/constants"],
    }
  },
  "include": ["src/**/*.ts", "prisma/**/*.ts"]
}
